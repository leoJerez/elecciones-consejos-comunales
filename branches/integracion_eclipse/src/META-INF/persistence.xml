<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1"
	xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="SistemaElectoralComunal"
		transaction-type="RESOURCE_LOCAL">

		<provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
		<class>org.eleccion_comunal.model.dto.Candidato</class>
		<class>org.eleccion_comunal.model.dto.Cargo</class>
		<class>org.eleccion_comunal.model.dto.CargoEventoElectoral</class>
		<class>org.eleccion_comunal.model.dto.CarteleraInformativa</class>
		<class>org.eleccion_comunal.model.dto.ConsejoComunal</class>
		<class>org.eleccion_comunal.model.dto.Eleccion</class>
		<class>org.eleccion_comunal.model.dto.Estado</class>
		<class>org.eleccion_comunal.model.dto.MesaElectoral</class>
		<class>org.eleccion_comunal.model.dto.MiembrosConsejo</class>
		<class>org.eleccion_comunal.model.dto.MiembrosMesa</class>
		<class>org.eleccion_comunal.model.dto.Municipio</class>
		<class>org.eleccion_comunal.model.dto.Parroquia</class>
		<class>org.eleccion_comunal.model.dto.Rol</class>
		<class>org.eleccion_comunal.model.dto.Usuario</class>
		<class>org.eleccion_comunal.model.dto.Vecino</class>
		<class>org.eleccion_comunal.model.dto.VecinoVivienda</class>
		<class>org.eleccion_comunal.model.dto.Vehiculo</class>
		<class>org.eleccion_comunal.model.dto.VehiculoVivienda</class>
		<class>org.eleccion_comunal.model.dto.Vivienda</class>
		<class>org.eleccion_comunal.model.dto.VotoCandidatoMesa</class>

		<properties>
			<property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver" />

			<property name="javax.persistence.jdbc.url"
				value="jdbc:postgresql://localhost:5432/sce_eleccion_comunal" />

			<property name="javax.persistence.jdbc.user" value="postgres" />
			<property name="javax.persistence.jdbc.password" value="postgres" />

			<!-- EclipseLink should create the database schema automatically <property 
				name="eclipselink.ddl-generation" value="drop-and-create-tables" /> <property 
				name="eclipselink.ddl-generation.output-mode" value="database" /> -->
		</properties>
	</persistence-unit>
</persistence>
